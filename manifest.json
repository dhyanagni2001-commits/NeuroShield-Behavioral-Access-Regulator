{
  "manifest_version": 3,
  "name": "Aegis Cognition Parental Enforcement Suite",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["filter.js"],
      "run_at": "document_idle"
    }
  ]
}
